<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="20dp"
    android:background="@drawable/card_bg"
    android:elevation="5dp">

    <ImageView
        android:id="@+id/cart_item_remove_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:src="@drawable/ic_close_24" />

    <RelativeLayout
        android:id="@+id/design_lin_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/view_thumbnail"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/cart_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_thumbnail"
            android:fontFamily="@font/brandon_grotesque_black"
            android:gravity="center"
            android:text="Glass Name"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/cart_brand_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cart_item_name"
            android:fontFamily="@font/brandon_grotesque_bold_italic"
            android:gravity="center"
            android:text="ARay"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/lin_lay_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cart_brand_name"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/brandon_grotesque_light"
                android:gravity="center"
                android:text="Quantity" />

            <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                android:id="@+id/individual_quantity_btn"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:elevation="6dp"
                android:gravity="center"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                app:finalNumber="10"
                app:initialNumber="1"
                app:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_lay_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lin_lay_1"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/brandon_grotesque_light"
                android:gravity="center"
                android:text="Frame width" />

            <TextView
                android:id="@+id/cart_item_frame_width_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/brandon_grotesque_black"
                android:gravity="center"
                android:text="ARay" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_lay_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lin_lay_2"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/brandon_grotesque_light"
                android:gravity="center"
                android:text="Prescription type" />

            <TextView
                android:id="@+id/cart_item_prescription_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/brandon_grotesque_black"
                android:gravity="center"
                android:text="ARay" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_lay_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lin_lay_3"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/brandon_grotesque_light"
                android:gravity="center"
                android:text="Lens type" />

            <TextView
                android:id="@+id/cart_item_lens_type_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/brandon_grotesque_black"
                android:gravity="center"
                android:text="ARay" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_lay_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lin_lay_4"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/brandon_grotesque_light"
                android:gravity="center"
                android:text="Lens material" />

            <TextView
                android:id="@+id/cart_item_lens_material_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/brandon_grotesque_black"
                android:gravity="center"
                android:text="ARay" />

        </LinearLayout>

        <TextView
            android:id="@+id/line_txt_view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/lin_lay_5"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:background="@color/grey" />

        <TextView
            android:id="@+id/cart_item_price"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/line_txt_view"
            android:gravity="right"
            android:paddingRight="60dp"
            android:textSize="16sp" />

    </RelativeLayout>


</RelativeLayout>